{
    "compilerOptions": {
        "types": [
            // add node as an option
            "node",
            "jasmine"
        ],
        // typeRoots option has been previously configured
        "typeRoots": [
            // add path to @types
            "../node_modules/@types"
        ],
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        //"module": "commonjs",
        "module": "es2015",
        "target": "es5",
        "jsx": "react",
        "allowJs": true
    }
}